{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",  
    "lib": ["ES6"], 
    "allowJs":true,  
    "outDir": "build",   
    "rootDir": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true,                     
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                     
    "skipLibCheck": true                                
  }
}
