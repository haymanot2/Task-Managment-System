
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
   id          String       @id @default(cuid())
  username  String    @unique
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  role      Role      @default(USER)
  projects  Project[]
  tasks     Task[]
}

model Project {
  id          String       @id @default(cuid())
  name        String
  description String
  tasks       Task[]
  user        User      @relation(fields: [userId], references: [id])
  userId      String
   createdAt   DateTime  @default(now())
}

model Task {
   id          String       @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  completed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  project     Project   @relation(fields: [projectId], references: [id])
  projectId   String
  user        User ?     @relation(fields: [userId], references: [id])
  userId      String?
}

enum Role {
  ADMIN
  USER
}